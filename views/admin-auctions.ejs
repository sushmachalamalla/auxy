<!-- Auctions Wizard START -->
<div class="panel panel-default" style="margin: 20px;">
  <div class="panel-heading">
    <h3 class="panel-title"><p class="enhance">Auction Wizard</p></h3>
  </div>
  <div class="panel-body">
    <!-- WIZARD -->
    <div class="container">
      <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
          <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>CREATE AUCTION</p>
          </div>
          <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>ADD ITEMS</p>
          </div>
          <div class="stepwizard-step">
            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
            <p>FINISH</p>
          </div>
        </div>
      </div>
      <form role="form">
        <div class="row setup-content" id="step-1">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3> Create an Auction</h3>
              <div class="form-group">
                <label class="control-label">Auction Name</label>
                <input id="wizard-auctionName" ng-model="auctionName" maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Auction Name"  />
              </div>
              <div class="form-group">
                <label class="control-label">Auction Description</label>
                <textarea id="wizard-auctionDescription" class="form-control" rows="3" placeholder="Enter Auction Description"> </textarea>
              </div>
              <div class="form-group">
                <label class="control-label">Date of Auction</label>
                <input id="wizard-auctionDate" maxlength="10" type="text" required="required" class="form-control" placeholder="Enter Date of Auction" />
              </div>
              <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
            </div>
          </div>
        </div>
        <div class="row setup-content" id="step-2">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3> Add items to <label class="enhance" style="color:#3498db">{{auctionName}}</label></h3>
              <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Panel heading</div>
                <div class="panel-body">
                  <button type="button" class="btn btn-info pull-left"><span class="glyphicon glyphicon-plus" aria-hidden="true"> Add</span></button>
                  <div class="pull-right"><span class="label label-info">Items</span> <span class="badge">4</span> </div>
                </div>

                <!-- List group -->
                <ul id="sortable" class="list-group">
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox"></span>Item 1</li>
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox"></span>Item 2</li>
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>Item 3</li>
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>Item 4</li>
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>Item 5</li>
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>Item 6</li>
                  <li class="list-group-item"><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>Item 7</li>
                </ul>
              </div>

              <div class="form-group">

              </div>

              <div class="row">
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
              </div>
            </div>
          </div>
        </div>
        <div class="row setup-content" id="step-3">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3> Step 3</h3>
              <button class="btn btn-success btn-lg pull-right" type="submit">Finish!</button>
            </div>
